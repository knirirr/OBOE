<div id="login" class="login_form">
  <div class="oboe-services-header"><span class="content-section login-section"><span class="header-text">Sign up</span></span></div>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'formbody'}) do |f| %>
  <%= devise_error_messages! %>

  <p>Registration requires that you supply a valid e-mail address, which will be used as your login name. For more information please see our <%= link_to 'privacy policy', :controller => '/info', :action => 'privacy' -%>.</p>

<br>

  <div><%= f.label :email %><br />
    <%= f.email_field :email, :class => 'text form-text', :size => 30 %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => 'text form-text', :size => 30 %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => 'text form-text', :size => 30 %></div>

  <center>
    <%= recaptcha_tags :ssl => true, :display => {:theme => 'white'} -%>

  <div><%= f.submit "Sign up" %></div>
  </center>
<% end %>

<div class="login-additional">
<%= render :partial => "devise/shared/links" %>
</div>
</div>
